<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMenuPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dev.lin.camino.ActivityMenuPrincipal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayoutCabecera"
            android:layout_width="fill_parent"
            android:layout_height="168dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="&lt;Usuario>"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay"
            android:rowCount="3"
            android:columnCount="2"
            android:columnOrderPreserved="false">

            <ImageButton
                android:id="@+id/buttonUsuarioDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="datosUsuario"
                android:text="Datos usuario"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@mipmap/ic_action_user"/>

            <ImageButton
                android:id="@+id/buttonCaminoNuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="caminoNuevo"
                android:layout_column="1"
                android:src="@mipmap/ic_action_add" />

            <ImageButton
                android:id="@+id/buttonFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="capturarFoto"
                android:text="Hacer foto"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@mipmap/ic_action_camera" />

            <ImageButton
                android:id="@+id/pruebaGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="obtenerCoordenadas"
                android:text="Obtener coordenadas"
                android:layout_column="1"
                android:src="@mipmap/ic_action_location_2" />

            <ImageButton
                android:id="@+id/buttonGaleria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="listarFotos"
                android:text="Lista fotos"
                android:layout_column="0"
                android:layout_row="2"
                android:src="@mipmap/ic_action_picture" />

            <ImageButton
                android:id="@+id/buttonCaminoActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style"
                android:onClick="caminoActual"
                android:text="+"
                android:layout_column="1"
                android:src="@mipmap/ic_action_arrow_right" />

        </GridLayout>

    </LinearLayout>
</RelativeLayout>
