<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Portada"
    android:id="@+id/layportada">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/frame_fondo">

        <TextView android:text="EL CAMINO" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            android:textSize="@dimen/abc_action_bar_default_height_material"
            android:scrollbars="none"
            android:textStyle="normal|bold|italic"
            android:id="@+id/textPortada"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>
