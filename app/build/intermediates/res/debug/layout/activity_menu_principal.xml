<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMenuPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dev.lin.camino.ActivityMenuPrincipal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayoutCabecera"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="&lt;Usuario>"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/botonera"
            android:layout_width="248dp"
            android:layout_height="397dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/buttonUsuarioDatos"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:background="@drawable/btn_style"
                android:onClick="datosUsuario"
                android:src="@mipmap/usuario_datos"
                android:text="Datos usuario" />

            <ImageButton
                android:id="@+id/buttonCaminoNuevo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:background="@drawable/btn_style"
                android:onClick="caminoNuevo"
                android:src="@mipmap/camino_nuevo"
                android:text="Camino nuevo" />

            <ImageButton
                android:id="@+id/buttonCaminoActual"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:background="@drawable/btn_style"
                android:onClick="caminoActual"
                android:src="@mipmap/camino_actual"
                android:text="Camino actual" />

            <ImageButton
                android:id="@+id/buttonObtenerCoordenadas"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:background="@drawable/btn_style"
                android:onClick="obtenerCoordenadas"
                android:src="@mipmap/obtener_coordenadas"
                android:text="Obtener coordenadas" />

            <ImageButton
                android:id="@+id/buttonCapturarFoto"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:background="@drawable/btn_style"
                android:onClick="capturarFoto"
                android:src="@mipmap/hacer_foto"
                android:text="Hacer foto" />

            <ImageButton
                android:id="@+id/buttonListarFotos"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:background="@drawable/btn_style"
                android:onClick="listarFotos"
                android:src="@mipmap/listar_fotos"
                android:text="Lista fotos" />
        </GridLayout>

    </LinearLayout>
</RelativeLayout>
